generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

enum Role {
  eventOrganizer
  customer
}

enum City {
  Jakarta
  Bandung
  Surabaya
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  username         String
  birthDate        DateTime?
  address          String?
  gender           Gender?
  email            String
  password         String
  point            Int       @default(0)
  pointExpiredDate DateTime  @default(now())
  image_profile    Bytes?    @db.LongBlob
  phone            BigInt?
  isVerified       Boolean?  @default(false)
  role             Role?
  referralCode     String
  usedReferralCode String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  voucherId        Int?
  Vouchers         Voucher[]
  Events           Event[]
}

model Event {
  id              Int      @id @default(autoincrement())
  name            String
  schedule        DateTime
  start_event     DateTime
  end_event       DateTime
  city            City
  location        String
  address         String
  description     String
  terms_condition String

  image  Bytes @db.LongBlob
  user   User  @relation(fields: [userId], references: [id])
  userId Int
}

model Category {
  id Int @id @default(autoincrement())
}

model Voucher {
  id      Int     @id @default(autoincrement())
  user    User    @relation(fields: [userId], references: [id])
  ammount Int
  isUsed  Boolean @default(false)
  userId  Int
}
